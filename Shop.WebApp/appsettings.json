{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore.Components": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DetailedErrors": "true",
  "SassCompiler": {
    "Source": "Styles",
    "Target": "wwwroot\\css",
    "Arguments": "--style=expanded --embed-source-map --embed-sources --error-css --stop-on-error",
    "GenerateScopedCss": true,
    "ScopedCssFolders": ["Views", "Pages", "Shared", "Components"]
  }
}
